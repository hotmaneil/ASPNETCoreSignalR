    /**投票用Hub */
    function PollHub() {

        // Start the connection.
        var connection = new signalR.HubConnectionBuilder()
            .withUrl('/pollHub')
            .build();

        connection.on('PollItem', function () {
            LoadActivePoll();
        });

        connection.start()
            .then(function () {
                console.log('connection started');
            })
            .catch(error => {
                console.error(error.message);
            });
    }

    /**載入已投票結果 */
    function LoadActivePoll() {
        var $div = $("#divQuestion");
        var $tbl = $("#tblPoll");
        $.ajax({
            url: '../api/Poll/Get',
            type: 'GET',
            datatype: 'json',
            success: function (data) {
                if (data.length > 0) {
                    $div.html('<h3>' + data[0].question + '</h3>');
                    $tbl.empty();
                    var rows = [];
                    var poll = data[0].pollOption;
                    for (var i = 0; i < poll.length; i++) {
                        rows.push('<tbody><tr><td>'
                            + poll[i].answers +
                            '</td><td><input name="poll" type="radio"/></td></tr></tbody>');
                    }
                    $tbl.append(rows.join(''));
                }
            }
        });
    }
</script>

<div id="divQuestion"></div>
<table id="tblPoll"></table>
